<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <ADM_Warehouse>
            <version>0.1.0.0</version>
        </ADM_Warehouse>
    </modules>
    <global>
        <models>
            <adm_warehouse>
                <class>ADM_Warehouse_Model</class>
                <resourceModel>adm_warehouse_resource</resourceModel>
            </adm_warehouse>
            <adm_warehouse_resource>
                <class>ADM_Warehouse_Model_Resource</class>
                <entities>
                    <stock_store>
                        <table>adm_cataloginventory_stock_store</table>
                    </stock_store>
                </entities>
            </adm_warehouse_resource>
            <cataloginventory>
                <rewrite>
                    <stock>ADM_Warehouse_Model_Cataloginventory_Stock</stock>
                    <stock_item>ADM_Warehouse_Model_Cataloginventory_Stock_Item</stock_item>
                    <observer>ADM_Warehouse_Model_Cataloginventory_Observer</observer>
                </rewrite>
            </cataloginventory>
            <cataloginventory_resource>
                <rewrite>
                    <stock>ADM_Warehouse_Model_Cataloginventory_Resource_Stock</stock>
                    <stock_item>ADM_Warehouse_Model_Cataloginventory_Resource_Stock_Item</stock_item>
                    <stock_item_collection>ADM_Warehouse_Model_Cataloginventory_Resource_Stock_Item_Collection</stock_item_collection>
                    <stock_collection>ADM_Warehouse_Model_Cataloginventory_Resource_Stock_Collection</stock_collection>
                </rewrite>
            </cataloginventory_resource>
            <!-- In order to split order per warehouse -->            
<!--             <checkout>
                <rewrite>
                    <type_onepage>ADM_Warehouse_Model_Checkout_Type_Onepage</type_onepage>
                </rewrite>
            </checkout>   -->        
        </models>
        <resources>
            <adm_warehouse_setup>
                <setup>
                    <module>ADM_Warehouse</module>
                    <class>ADM_Warehouse_Model_Resource_Setup</class>
                </setup>
            </adm_warehouse_setup>
        </resources>        
        <blocks>
            <adm_warehouse>
                <class>ADM_Warehouse_Block</class>
            </adm_warehouse>
            <adminhtml>
                <rewrite>
                    <catalog_product_grid>ADM_Warehouse_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <adm_warehouse>
                <class>ADM_Warehouse_Helper</class>
            </adm_warehouse>
        </helpers>
        <fieldsets>
            <sales_convert_quote>
                <warehouse_ids>
                    <to_order>*</to_order>
                </warehouse_ids>
            </sales_convert_quote>        
        </fieldsets>        
    </global>
    <adminhtml>
        <layout>
            <updates>
                <adm_warehouse>
                    <file>adm/warehouse.xml</file>
                </adm_warehouse>
            </updates>
        </layout>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <inventory>
                        <class>adm_warehouse/observer</class>
                        <method>alterAdminhtmlProductInventoryTab</method>
                    </inventory>
                </observers>            
            </core_block_abstract_prepare_layout_after>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <adm_warehouse before="Mage_Adminhtml">ADM_Warehouse_Adminhtml</adm_warehouse>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>    
</config>